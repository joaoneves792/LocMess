<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="pt.ulisboa.tecnico.cmov.locmess">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">

        <activity android:name=".HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".LoginActivity">

        </activity>
        <activity
            android:name=".SignupActivity"
            android:parentActivityName=".LoginActivity">

            <!-- The meta-data tag is required to support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LoginActivity" />
        </activity>

        <activity
            android:name=".MessagesActivity"
            android:parentActivityName=".HomeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeActivity" />
        </activity>
        <activity
            android:name=".MessageViewActivity"
            android:parentActivityName=".MessagesActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MessagesActivity" />
        </activity>
        <activity
            android:name=".PostMessageActivity"
            android:parentActivityName=".HomeActivity"
            android:windowSoftInputMode="adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeActivity" />
        </activity>
        <activity
            android:name=".PostMessageDateTime"
            android:parentActivityName=".PostMessageActivity"
            android:windowSoftInputMode="adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".PostMessageActivity" />
        </activity>
        <activity
            android:name=".PostMessageRules"
            android:parentActivityName=".PostMessageDateTime"
            android:windowSoftInputMode="adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".PostMessageDateTime" />
        </activity>
        <activity
            android:name=".AddMessageRuleActivity"
            android:parentActivityName=".PostMessageRules"
            android:windowSoftInputMode="adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".PostMessageRules" />
        </activity>
        <activity
            android:name=".LocationsActivity"
            android:parentActivityName=".HomeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeActivity" />
        </activity>
        <activity
            android:name=".AddGPSLocationActivity"
            android:parentActivityName=".LocationsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LocationsActivity" />
        </activity>
        <activity
            android:name=".AddWiFiLocation"
            android:parentActivityName=".LocationsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LocationsActivity" />
        </activity>
        <activity
            android:name=".ProfileActivity"
            android:parentActivityName=".HomeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeActivity" />
        </activity>
        <activity
            android:name=".AddInterestActivity"
            android:parentActivityName=".ProfileActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ProfileActivity" />
        </activity>

        <activity android:name=".LocationGPSViewActivity"></activity>
	
	<receiver android:name="pt.ulisboa.tecnico.cmov.locmess.FetchMessagesBroadcastReceiver"/>
        <!--<receiver android:name="pt.ulisboa.tecnico.cmov.locmess.SimWifiP2pBroadcastReceiver"/>
        <receiver android:name="pt.ulisboa.tecnico.cmov.locmess.WifiReceiver"/>-->
        <service android:enabled="true" android:name="pt.ulisboa.tecnico.cmov.locmess.FetchMessagesService" />
        <service android:enabled="true" android:name="pt.inesc.termite.wifidirect.service.SimWifiP2pService" />

    </application>

</manifest>
