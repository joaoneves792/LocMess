<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pt.ulisboa.tecnico.cmov.locmess">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignupActivity"
            android:parentActivityName=".LoginActivity">

            <!-- The meta-data tag is required to support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LoginActivity" />
        </activity>
        <activity android:name=".HomeActivity" />
        <activity
            android:name=".MessagesActivity"
            android:parentActivityName=".HomeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeActivity" />
        </activity>
        <activity
            android:name=".MessageViewActivity"
            android:parentActivityName=".MessagesActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MessagesActivity" />
        </activity>
        <activity
            android:name=".PostMessageActivity"
            android:parentActivityName=".MessagesActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MessagesActivity" />
        </activity>
        <activity
            android:name=".LocationsActivity"
            android:parentActivityName=".HomeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeActivity" />
        </activity>
        <activity
            android:name=".AddGPSLocationActivity"
            android:parentActivityName=".LocationsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LocationsActivity" />
        </activity>
        <activity
            android:name=".AddWiFiLocation"
            android:parentActivityName=".LocationsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LocationsActivity" />
        </activity>
        <activity
            android:name=".ProfileActivity"
            android:parentActivityName=".HomeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeActivity" />
        </activity>
        <activity
            android:name=".AddInterestActivity"
            android:parentActivityName=".ProfileActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ProfileActivity" />
        </activity>
        <activity android:name=".PostMessageDateTime" />
        <activity android:name=".PostMessageRules" />
        <activity android:name=".AddMessageRuleActivity"></activity>
    </application>

</manifest>