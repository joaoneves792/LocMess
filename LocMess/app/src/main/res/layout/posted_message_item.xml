<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/titlePoster"
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:text="@string/poster"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/textViewSender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/poster" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/titleLocation"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:text="@string/location"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/textViewLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="location" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/titleDate"
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:text="@string/publishDate"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/textViewPublishDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/publishDate" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/titleMessage"
            android:layout_width="67dp"
            android:layout_height="wrap_content"
            android:text="@string/message"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/textViewMessageBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="@string/message" />
    </LinearLayout>

</LinearLayout>